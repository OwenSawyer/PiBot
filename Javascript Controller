<script>
function toggleForward() {
    pubmsg = { "req" : "forward" };
    pubnub.publish(
                        { 
                            channel : 'gpio-raspberry-control' ,
                            message :  pubmsg
                            
                        }
                        
                    );
}
</script>
<script>
function toggleBackward() {
    pubmsg = { "req" : "backward" };
    pubnub.publish(
                        { 
                            channel : 'gpio-raspberry-control' ,
                            message :  pubmsg
                            
                        }
                        
                    );
}
</script>
